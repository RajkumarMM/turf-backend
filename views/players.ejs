<%- include('partials/header', { title: 'Players' }) %>
<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="text-primary">Players List</h1>
  <a href="/admin" class="btn btn-outline-primary">Back</a>
</div>

<!-- Display Success or Error Message if Exists -->
<% if (message) { %>
  <div id="success-alert" class="alert alert-success alert-dismissible fade show" role="alert">
    <%= message %>
  </div>
<% } %>

<!-- Players Table -->
<table class="table table-striped table-bordered shadow-sm">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% players.forEach(player => { %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.email %></td>
        <td>
          <a href="/admin/edit-player/<%= player._id %>" class="btn btn-primary btn-sm">Edit</a>
          <a href="/admin/delete-player/<%= player._id %>" class="btn btn-danger btn-sm">Delete</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<%- include('partials/footer') %>
