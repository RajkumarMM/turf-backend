<%- include('partials/header', { title: 'Admin Dashboard' }) %>
<!-- Page Title -->
<h1 class="text-center mb-4 text-primary">Admin Dashboard</h1>

<!-- Dashboard Cards -->
<div class="row g-4">
  <!-- Owners Card -->
  <div class="col-md-4">
    <div
      class="card text-center shadow-sm border-primary"
      onclick="navigateTo('owners')"
      style="cursor: pointer"
    >
      <div class="card-body">
        <h5 class="card-title text-primary">Owners</h5>
        <p class="card-text">
          Total Owners: <strong><%= owners.length %></strong>
        </p>
      </div>
    </div>
  </div>

  <!-- Players Card -->
  <div class="col-md-4">
    <div
      class="card text-center shadow-sm border-success"
      onclick="navigateTo('players')"
      style="cursor: pointer"
    >
      <div class="card-body">
        <h5 class="card-title text-success">Players</h5>
        <p class="card-text">
          Total Players: <strong><%= players.length %></strong>
        </p>
      </div>
    </div>
  </div>

  <!-- Turfs Card -->
  <div class="col-md-4">
    <div
      class="card text-center shadow-sm border-warning"
      onclick="navigateTo('turfs')"
      style="cursor: pointer"
    >
      <div class="card-body">
        <h5 class="card-title text-warning">Turfs</h5>
        <p class="card-text">
          Total Turfs: <strong><%= turfs.length %></strong>
        </p>
      </div>
    </div>
  </div>
</div>
<%- include('partials/footer') %>
