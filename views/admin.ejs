<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-4">
    <h1 class="text-center mb-4">Admin Dashboard</h1>

    <!-- Turfs Table -->
    <h2>Turfs</h2>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Location</th>
          <th>Price</th>
          <th>Timings</th>
        </tr>
      </thead>
      <tbody>
        <% if (turfs.length > 0) { %>
          <% turfs.forEach((turf, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= turf.name %></td>
              <td><%= turf.location %></td>
              <td><%= turf.price %></td>
              <td><%= turf.timings.join(', ') %></td>
            </tr>
          <% }); %>
        <% } else { %>
          <tr>
            <td colspan="5" class="text-center">No turfs available.</td>
          </tr>
        <% } %>
      </tbody>
    </table>

    <!-- Players Table -->
    <h2>Players</h2>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Email</th>
        </tr>
      </thead>
      <tbody>
        <% if (players.length > 0) { %>
          <% players.forEach((player, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= player.name %></td>
              <td><%= player.email %></td>
            </tr>
          <% }); %>
        <% } else { %>
          <tr>
            <td colspan="3" class="text-center">No players available.</td>
          </tr>
        <% } %>
      </tbody>
    </table>

    <!-- Owners and Their Turfs Table -->
    <h2>Owners</h2>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Email</th>
          <th>Number of Turfs</th>
        </tr>
      </thead>
      <tbody>
        <% if (owners.length > 0) { %>
          <% owners.forEach((owner, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= owner.ownerName %></td>
              <td><%= owner.ownerEmail %></td>
              <td><%= owner.turfCount %></td>
            </tr>
          <% }); %>
        <% } else { %>
          <tr>
            <td colspan="4" class="text-center">No owners available.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
