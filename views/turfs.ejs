<%- include('partials/header', { title: 'Turfs' }) %>
    <h1>Turfs List</h1>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Location</th>
          <th>Price</th>
          <th>Timings</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% turfs.forEach(turf => { %>
          <tr>
            <td><%= turf.name %></td>
            <td><%= turf.location %></td>
            <td><%= turf.price %></td>
            <td><%= turf.timings %></td>

            <td>
              <a href="/admin/edit-turf/<%= turf._id %>" class="btn btn-primary btn-sm">Edit</a>
              <a href="/admin/delete-turf/<%= turf._id %>" class="btn btn-danger btn-sm">Delete</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <%- include('partials/footer') %>
