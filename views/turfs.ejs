<%- include('partials/header', { title: 'Turfs' }) %>

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="text-primary">Turfs List</h1>
  <a href="/admin" class="btn btn-outline-primary">Back</a>
</div>

<!-- Display Success Message if Exists -->
<% if (message) { %>
  <div id="success-alert" class="alert alert-success alert-dismissible fade show" role="alert">
    <%= message %>
  </div>
<% } %>

<!-- Turfs Table -->
<table class="table table-striped table-bordered shadow-sm">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Price</th>
      <th>Timings</th>
      <th class="text-center">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% turfs.forEach(turf => { %>
      <tr>
        <td><%= turf.name %></td>
        <td><%= turf.location %></td>
        <td><%= turf.price %></td>
        <td><%= turf.timings.join(', ') %></td> <!-- Join timings array with commas -->
        <td>
          <a href="/admin/edit-turf/<%= turf._id %>" class="btn btn-primary btn-sm">Edit</a>
          <a href="/admin/delete-turf/<%= turf._id %>"
             class="btn btn-danger btn-sm"
             onclick="return confirm('Are you sure you want to delete this turf ?');"
          >Delete</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<%- include('partials/footer') %>
